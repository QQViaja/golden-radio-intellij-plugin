<idea-plugin require-restart="false">
    <id>com.qqviaja.plugins.golden-radio-intellij-plugin</id>
    <name>Golden Radio</name>
    <vendor email="kimichen13@gmail.com" url="https://kimi.qqviaja.com">QQ Viaja</vendor>

    <description><![CDATA[
      Golden Radio is a plugin for IntelliJ IDEA that allows you automatically use golden ratio to split window.
    ]]></description>

    <!-- please see https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>GoldenRadioBundle</resource-bundle>
    
<!--    <idea-version since-build="241.0"/>-->

    <extensions defaultExtensionNs="com.intellij">
        <applicationService serviceImplementation="com.qqviaja.plugins.model.GoldenRadioSettingsHolder"/>

        <applicationConfigurable groupId="tools" id="golden.radio.id"
                                 bundle="GoldenRadioBundle"
                                 key="configurable.golden.radio.configurable.display.name"
                                 instance="com.qqviaja.plugins.ui.GoldenRadioConfigurable">
        </applicationConfigurable>
    </extensions>

    <applicationListeners>
        <listener class="com.qqviaja.plugins.GoldenRadioListener" topic="com.intellij.openapi.fileEditor.FileEditorManagerListener"/>
    </applicationListeners>

    <actions>
        <action id="GoldenRadioAction" class="com.qqviaja.plugins.GoldenRadioAction" text="Golden Radio Action"
                description="Golden radio action">
            <add-to-group group-id="EditorTabsGroup" anchor="after" relative-to-action="MaximizeEditorInSplit"/>
            <keyboard-shortcut first-keystroke="control shift G" keymap="$default"/>
            <keyboard-shortcut first-keystroke="control shift G" keymap="Emacs"/>
        </action>
    </actions>
</idea-plugin>